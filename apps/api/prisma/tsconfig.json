{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.json"
  ],
  "exclude": ["node_modules"]
} 