#########################################
# Shared runtime defaults for Dockerized stack
#########################################

# Shared environment mode
ENVIRONMENT=production

# Core database configuration
POSTGRES_DB=quiz_maker_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Application-facing connection strings
DATABASE_URL=postgresql://quiz_user:quiz_password@postgres:5432/quizmaker

# Shared service endpoints
API_BASE_URL=https://quiz-api.utkarshjoshi.com
FRONTEND_URL=https://quiz.utkarshjoshi.com
SOCKET_URL=wss://quiz-ws.utkarshjoshi.com

# Authentication (replace with real Auth0 tenant credentials)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=replace-with-auth0-client-id
AUTH0_CLIENT_SECRET=replace-with-auth0-client-secret
AUTH0_AUDIENCE=https://quiz-api.utkarshjoshi.com
JWT_SECRET=replace-with-strong-secret

