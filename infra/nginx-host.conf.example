# Host-level Nginx configuration for Quiz Maker
# This file should be installed on the EC2 host (e.g., /etc/nginx/sites-available/quiz-maker)
# and handles SSL termination and routing to Docker containers
#
# Installation:
# 1. Install nginx on the host: sudo apt install nginx
# 2. Install certbot: sudo apt install certbot python3-certbot-nginx
# 3. Copy this file to /etc/nginx/sites-available/quiz-maker
# 4. Create symlink: sudo ln -s /etc/nginx/sites-available/quiz-maker /etc/nginx/sites-enabled/
# 5. Get SSL certificates: sudo certbot --nginx -d quiz.utkarshjoshi.com -d quiz-api.utkarshjoshi.com -d quiz-ws.utkarshjoshi.com
# 6. Test: sudo nginx -t
# 7. Reload: sudo systemctl reload nginx

# Map to handle Connection header properly for WebSocket upgrades
# This must be at the http level (in /etc/nginx/nginx.conf or here if using include)
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

# Frontend (Static SPA)
server {
    listen 80;
    listen [::]:80;
    server_name quiz.utkarshjoshi.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name quiz.utkarshjoshi.com;

    # SSL certificates (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/quiz.utkarshjoshi.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/quiz.utkarshjoshi.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Proxy to frontend container (served by nginx in container)
    location / {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
    }
}

# API Backend
server {
    listen 80;
    listen [::]:80;
    server_name quiz-api.utkarshjoshi.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name quiz-api.utkarshjoshi.com;

    # SSL certificates (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/quiz-api.utkarshjoshi.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/quiz-api.utkarshjoshi.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Proxy to API container
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        
        # CRITICAL: Headers for OAuth callbacks and SSL termination
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;  # CRITICAL for OAuth redirects
        proxy_set_header X-Forwarded-Host $host;
        
        # Important for OAuth callbacks
        proxy_redirect off;
        proxy_buffering off;
        
        # Increase timeouts for OAuth flow - prevents 502 errors
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Increase buffer sizes for large OAuth responses
        proxy_buffer_size 16k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;
    }
}

# WebSocket Service (WSS)
server {
    listen 80;
    listen [::]:80;
    server_name quiz-ws.utkarshjoshi.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name quiz-ws.utkarshjoshi.com;

    # SSL certificates (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/quiz-ws.utkarshjoshi.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/quiz-ws.utkarshjoshi.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # CRITICAL: WebSocket upgrade location
    # Client connects to root path (/?token=...), nginx proxies to /ws endpoint
    location / {
        # Proxy to the /ws endpoint on the socket service
        # Note: docker-compose maps container port 5000 to host port 5001
        proxy_pass http://127.0.0.1:5001/ws;
        proxy_http_version 1.1;
        
        # CRITICAL: WebSocket upgrade headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # CRITICAL: Disable buffering for WebSocket
        proxy_buffering off;
        proxy_cache off;
        
        # CRITICAL: Long timeouts for WebSocket connections (7 days = persistent)
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
        
        # WebSocket-specific settings
        proxy_http_version 1.1;
    }
    
    # Health check endpoint (optional, for monitoring)
    location /health {
        proxy_pass http://127.0.0.1:5001/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}

